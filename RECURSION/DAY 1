1 .factorial
# include<iostream>
using namespace std ;
int fact(int n){
    if (n==0){
        return 1;
    }
    return n* fact(n-1);
}
int main (){
    int n;
    cout<< "enter the number to find  factorial :" << " ";
    cin >> n;
    cout << " factorial of " << n << " is " << fact(n) << endl;

}
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------
 2. POWER of 2 
 # include<iostream>
using namespace std ;
int power(int n){
    if (n==0){
        return 1;
    }
    return 2* power(n-1);
}
int main (){
    int n;
    cout<< "enter the number to find power:" << " ";
    cin >> n;
    cout << " 2 raised to power " << n << " is " << power(n) << endl;

}
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------

